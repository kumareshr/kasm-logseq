
if [ "$(whoami)" != "abc" ]; then
  echo "$(whoami) is not abc, changing ownership of /opt/logseq to $(id -u):$(id -g)"
  sudo chown -R $(id -u):$(id -g) /opt/logseq
  echo "current ownership:" && ls -ld /opt/logseq
fi

# ðŸ›‘ WAIT for X server
echo "Waiting for X to start..."
while [ ! -e /tmp/.X11-unix/X1 ]; do
  sleep 1
done

export DISPLAY=:1
echo "DISPLAY is set to $DISPLAY"

echo "Starting Logseq in 5 seconds..."
sleep 5

logseq &
echo "Logseq started"
